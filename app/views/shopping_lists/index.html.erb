<div class="container">
 <div id="shopping-list-display">
   <h3 class="title-wrapper">My Shopping Lists</h3>
     <!-- tabbing begins -->
     <div class="row">
       <div class="col s12">
         <ul class="tabs tabs-override">
           <li class="tab col s4"><a class="active" href="#test2">Upcoming Trips</a></li>
           <li class="tab col s4"><a href="#test4">Past Lists</a></li>
         </ul>
       </div>
       <div class="col s12">
         <%= link_to "Add List", new_user_shopping_list_path(current_user), class: "col s2 push-s10 waves-effect waves-light btn #e53935 red darken-1" %>
       </div>
       <!-- tab content begins -->
       <div id="test2" class="col s12">
         <div class="row">
           <% if @shopping_lists.any? %>
             <ul>
               <% @shopping_lists.each do |list| %>
                 <%= render partial: "shopping_list", layout: false, locals: { list: list } %>
               <% end %>
             </ul>
           <% end %>
         </div>
       </div>
       <div id="test4" class="col s12">
         <div class="row">
           <% if @past_lists.any? %>
             <ul>
               <% @past_lists.each do |list| %>
                 <%= render partial: "shopping_list", layout: false, locals: { list: list } %>
               <% end %>
             </ul>
           <% else %>
            <p>No Past Lists<p>
           <% end %>
         </div>
       </div>
       <!-- tab content ends -->
     </div>
   <!-- tabbing ends -->
 </div>
</div>
