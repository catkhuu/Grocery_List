<div id="new-shopping-list-form" class="container">
  <h1 class="center">New Shopping List</h1>
  <div class="row">
    <div class="col s12">
      <%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>
    </div>
  </div>
  <div class="row">
    <div class="col s10 offset-s1">
      <%= form_for :shopping_list, url: user_shopping_lists_path(current_user) do |f| %>
      <div class="row">
        <div class="col s6 offset-s2">
          Title: <%= f.text_field :title %>
        </div>
      </div>
      <div class="row">
        <div class="col s4 offset-s2">
          Expected Shopping Date:
        <input type="date" class="datepicker" name="shopping_list[shopping_date]">
        </div>
      </div>
    <div class="row create-new-shopping-list-btn">
      <div class="center" id="create-new-shopping-list-btn">
        <%= f.submit "Submit", :class => "waves-effect waves-light btn #e53935 red darken-1" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
