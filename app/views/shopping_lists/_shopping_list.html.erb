
<div class="cols 12">
  <div class="row">
    <li class="col s3 indv-recipe-title blue-darken-1-text"><%= link_to list.title, user_shopping_list_path(current_user, list.id) %><br>
    Expected Shopping Date: <%= list.display_shopping_date %>
    </li>
    <!-- <li class="col s3 indv-recipe-title blue-darken-1-text">Expected Shopping Date: <%= list.display_shopping_date %></li> -->
    <li class="col s3">
      <button href="/users/<%= current_user.id %>/shopping_lists/<%= list.id %>/edit" class="btn-floating btn-medium red">
        <input type="hidden" name="_method" value="put" />
        <i class="small material-icons btn-action">edit_mode</i>
      </button>
    </li>
    <li class="col s3">
      <button href="/users/<%= current_user.id %>/shopping_lists/<%= list.id %>" class="btn-floating btn-medium red">
        <input type="hidden" name="_method" value="delete" />
        <i class="small material-icons">delete</i>
      </button>
    </li>
  </div>
</div>
