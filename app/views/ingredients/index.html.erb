<div class="container">
 <div id="ingredient-list">
   <h2 class="title-wrapper">Ingredients</h1>
     <div class="cols 12">
       <div class="row">
         <div class="col s2 offset-s10">
           <%= link_to "Add Ingredient", new_ingredient_path, :class => "waves-effect waves-light btn #e53935 red darken-1", id: "add-ingredient-btn" %>
         </div>
         <!-- table begins -->
         <table>
            <thead>
              <tr>
              </tr>
            </thead>
            <% if @ingredients.any? %>
            <tbody>
              <% @ingredients.each do | ingredient | %>
              <tr>
                <td><%= link_to ingredient.name, ingredient_path(ingredient), class: "black-text" %></td>
                <td>
                  <button href="/ingredients/<%= ingredient.id %>/edit" class="btn-floating btn-medium red">
                     <input type="hidden" name="_method" value="put" />
                     <i class="small material-icons btn-action">edit_mode</i>
                   </button>
                 </td>
                <td>
                   <button href="/ingredients/<%= ingredient.id %>" class="btn-floating btn-medium red">
                     <input type="hidden" name="_method" value="delete" />
                     <i class="small material-icons">delete</i>
                   </button>
                 </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- table ends -->
         </div>
       </div>
    <% end %>
    <!-- add new ingredient button -->

 </div>
</div>
